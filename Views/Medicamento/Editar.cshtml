@model Crud.Models.Medicamento

@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/custom-styles.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container my-5">
        <div class="panel">
            <div class="panel-heading">
                <h4 class="text-dark">Editar Medicamento</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Editar","Medicamento")" method="post">
                    @Html.HiddenFor(m => m.MedicamentoID) 

                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="Nombre" value="@Model.Nombre" />
                    </div>

                    <div class="form-group">
                        <label>Descripción</label>
                        <input type="text" class="form-control" name="Descripcion" value="@Model.Descripcion" />
                    </div>

                    <div class="form-group">

                        <label>Precio</label>

                        <input type="text" class="form-control" name="Precio" value="@Model.Precio.ToString("0.00")" />
                    </div>

                    <div class="form-group">
                        <label>Stock</label>
                        <input type="number" class="form-control" name="Stock" value="@Model.Stock" />
                    </div>

                    <div class="form-group">
                        <label>Fecha de Expiración</label>
                        <input type="date" class="form-control" name="FechaExpiracion" value="@Model.FechaExpiracion.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="form-group mt-3">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <button type="button" class="btn btn-secondary" onclick="history.back();">Volver</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
